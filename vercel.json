{
  "version": 2,
  "builds": [
    { "src": "backend/dist/index.js", "use": "@vercel/node" },
    { "src": "frontend/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/dist/index.js" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "buildCommand": "cd backend && npm install && npm run build"
}

